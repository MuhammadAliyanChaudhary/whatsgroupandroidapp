<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">



    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_group_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="1dp"
        app:cardCornerRadius="0dp"
        android:layout_marginBottom="5dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:layout_marginHorizontal="10dp">

        <TextView
            android:id="@+id/groupLinkTextHidden"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            />





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5dp"
            >


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                >
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/group_Image"
                android:layout_width="75dp"
                android:layout_height="75dp"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent"
                android:scaleType="centerCrop"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginVertical="4dp"
                android:src="@drawable/ic_image_24" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.8"
                android:padding="2dp"
                android:orientation="vertical"
                android:gravity="center_vertical"
                >


            <TextView
                android:id="@+id/text_group_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLength="25"
                android:maxLines="1"
                android:text="Cricket Lover"
                android:textColor="@color/primary_main"
                android:textSize="17dp"
                android:layout_marginLeft="8dp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/text_group_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="45dp"
                android:maxLines="2"
                android:layout_marginLeft="8dp"
                android:textColor="@color/primary_gray_dark"
                android:paddingVertical="4dp"
                android:minLines="1"
                android:text="Category: Funny"
                android:textSize="12dp" />


            </LinearLayout>


            <LinearLayout
                android:id="@+id/join_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_gravity="center"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                >


                <ImageView
                    android:id="@+id/image_button_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:paddingRight="12dp"
                    android:paddingTop="10dp"
                    android:layout_marginTop="3dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_baseline_group_add_24"
                    android:background="@color/primary_transparent"
                     />

            <TextView
                android:id="@+id/text_join"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/group_Image"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="5dp"
                android:text="join"
                android:textStyle="bold"
                android:textColor="@color/primary_gray_dark"
                android:paddingLeft="8dp"
                android:paddingRight="12dp"
                android:paddingBottom="6dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="12dp">

            </TextView>




            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>





</LinearLayout>